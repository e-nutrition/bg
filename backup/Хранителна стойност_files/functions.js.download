;(function($, window, document, undefined) {
	var $win = $(window);
	var $doc = $(document);

	$doc.ready(function() {
		// Multi Level navbar dropdowns
		$(".navbar-nav [data-toggle='dropdown']").on("click", function(event) {
			event.preventDefault();
			event.stopPropagation();

			$(this).siblings().toggleClass("show");
		});

		// Slider Main
		$('.slider-main').slick({
			slidesToShow: 1,
			slidesToScroll: 1,
			fade: true
		});
		
		// Slider Gallery
		$('.slider-gallery').slick({
			autoplay: true,
  			autoplaySpeed: 2500,
			centerMode: true,
			centerPadding: '300px',
			slidesToShow: 3,
			focusOnSelect: true,
			responsive: [
				{
					breakpoint: 1200,
					settings: {
						centerPadding: '200px',
					}
				},
				{
					breakpoint: 992,
					settings: {
						centerPadding: '100px',
					}
				},
				{
					breakpoint: 768,
					settings: {
						slidesToShow: 2,
						centerPadding: '25px',
					}
				}
			]
		});

		// Card Post Slider
		$('.card-post-slider').slick({
			slidesToShow: 1,
			slidesToScroll: 1,
			fade: true
		});

		// Slider Testimonials
		$('.slider-testimonials').slick({
			arrows: false,
			dots: true,
			slidesToShow: 1,
			slidesToScroll: 1
		});

		// Synched slider
		$('.slider-for').slick({
			slidesToShow: 1,
			slidesToScroll: 1,
			arrows: false,
			fade: true,
			asNavFor: '.slider-nav'
		});
		
		$('.slider-nav').slick({
			slidesToShow: 4,
			slidesToScroll: 1,
			asNavFor: '.slider-for',
			arrows: false,
			dots: false,
			focusOnSelect: true,
			centerPadding: 0
		});

		// Synched Product slider
		$('.product-slider').slick({
			slidesToShow: 1,
			slidesToScroll: 1,
			arrows: false,
			fade: true,
			asNavFor: '.product-slider-nav'
		});
		
		$('.product-slider-nav').slick({
			slidesToShow: 4,
			slidesToScroll: 1,
			arrows: false,
			asNavFor: '.product-slider',
			dots: false,
			focusOnSelect: true,
			vertical: true
		});
	});
})(jQuery, window, document);